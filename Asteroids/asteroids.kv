<Rock>:
    size_hint: None, None
    size: 100, 100
    font_size: 100
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
    canvas.after:
        PopMatrix

<Ship>:
    size_hint: None, None
    size: 50, 50
    canvas:
        Rotate:
            angle: self.angle
            origin: self.center
        Triangle:
            points: self.center_x - 20, self.center_y-20, self.center_x, self.center_y+20, self.center_x+20, self.center_y-20
        Rotate:
            angle: -self.angle
            origin: self.center


<Game>:
    score_label: score_label
    ship: ship
    game_screen: game_screen

    BoxLayout:
        orientation: "vertical"

        GameScreen:
            ship: ship
            id: game_screen
            Ship:
                id: ship
                center: self.parent.center

        BoxLayout:
            size_hint_y: None
            size_y: 100
            orientation: "horizontal"
            Button:
                size_hint_x: None
                size_x: 100
                text: "<-"
                on_touch_down: ship.rotate_left()
            Button:
                size_hint_x: None
                size_x: 100
                text: "->"
                on_touch_down: ship.rotate_right()
            Button:
                size_hint_x: None
                size_x: 100
                text: "##"
                on_touch_down: ship.fire_engine()
            Label:
                id: score_label
                size_hint_x: None
                size_x: 100
                text: str(int(self.parent.parent.parent.score))
